<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<GridLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:rowCount="6"
    android:layout_margin="20dp"

    >

    <Button
        android:layout_margin="10dp"
        android:id="@+id/tshirt"
        android:layout_row="0"
        android:textColor="@color/black"
        android:layout_column="0"
        >
    </Button>

    <Button
        android:id="@+id/dresses"
        android:layout_margin="10dp"
        android:layout_row="0"
        android:textColor="@color/black"
        android:layout_column="1"
       >
    </Button>

    <Button
        android:id="@+id/jeans"
        android:layout_margin="10dp"
        android:layout_row="0"
        android:textColor="@color/black"
        android:layout_column="2"
        >
    </Button>


    <Button
        android:id="@+id/accessories"
        android:layout_margin="10dp"
        android:layout_row="1"
        android:textColor="@color/black"
        android:layout_column="0"
        >
    </Button>

    <Button
        android:id="@+id/hat"
        android:layout_margin="10dp"
        android:layout_row="1"
        android:textColor="@color/black"
        android:layout_column="1"
       >
    </Button>

    <Button
        android:id="@+id/coats"
        android:layout_margin="10dp"
        android:layout_row="1"
        android:textColor="@color/black"
        android:layout_column="2"
        >
    </Button>
    <Button
        android:id="@+id/shoes"
        android:layout_margin="10dp"
        android:layout_row="2"
        android:textColor="@color/black"
        android:layout_column="0"
       >
    </Button>

    <Button
        android:id="@+id/bags"
        android:layout_margin="10dp"
        android:layout_row="2"
        android:textColor="@color/black"
        android:layout_column="1"
        >
    </Button>
    <Button
        android:id="@+id/jackets"
        android:layout_margin="10dp"
        android:layout_row="2"
        android:textColor="@color/black"
        android:layout_column="2"
        >
    </Button>

    <Button
        android:id="@+id/boufan"
        android:layout_margin="10dp"
        android:layout_row="3"
        android:textColor="@color/black"
        android:layout_column="0"
       >
    </Button>

    <Button
        android:id="@+id/shirts"
        android:layout_margin="10dp"
        android:layout_row="3"
        android:textColor="@color/black"
        android:layout_column="1"
       >
    </Button>
    <Button
        android:layout_margin="10dp"
        android:layout_row="3"
        android:textColor="@color/black"
        android:layout_column="2"
        >
    </Button>

    <Button
        android:layout_margin="10dp"
        android:layout_row="4"
        android:textColor="@color/black"
        android:layout_column="0"
        >
    </Button>
    <Button
        android:layout_margin="10dp"
        android:layout_row="4"
        android:textColor="@color/black"
        android:layout_column="1"
        >
    </Button>

    <Button
        android:layout_margin="10dp"
        android:layout_row="4"
        android:textColor="@color/black"
        android:layout_column="2"
        >
    </Button>

    <Button
        android:layout_margin="10dp"
        android:layout_row="5"
        android:textColor="@color/black"
        android:layout_column="0"
        >
    </Button>

    <Button
        android:layout_margin="10dp"
        android:layout_row="5"
        android:textColor="@color/black"
        android:layout_column="1"
        >
    </Button>

    <Button
        android:layout_margin="10dp"
        android:layout_row="5"
        android:textColor="@color/black"
        android:layout_column="2"
        >
    </Button>
</GridLayout>

    <Button
        android:id="@+id/apply_season_categories_occasion_button_sheet"
        android:text="Apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp">

    </Button>

    <Button
        android:id="@+id/clear"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="20dp"
        android:layout_toStartOf="@+id/apply_season_categories_occasion_button_sheet"
        android:text="Clear All">

    </Button>

</RelativeLayout>


